<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".Detailed">

    <TextView
        android:id="@+id/weatherHeadingTextView"
        android:layout_width="258dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="287dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="255dp"
        android:text="Detailed Weather Data"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherDetailsTextView"
        android:layout_width="744dp"
        android:layout_height="287dp"
        android:layout_below="@id/weatherHeadingTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="48dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weatherDetailsTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="331dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="332dp"
        android:text="Back to Home" />

</RelativeLayout>
